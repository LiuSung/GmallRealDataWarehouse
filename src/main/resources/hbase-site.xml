        <name>hbase.rootdir</name>
        <value>hdfs://192.168.100:9820/hbase</value>
    </property>

    <property>
        <name>hbase.cluster.distributed</name>
        <value>true</value>
    </property>

    <property>
        <name>hbase.zookeeper.quorum</name>
        <value>192.168.141.100,192.168.141.101,192.168.141.102</value>
